[Unit]
Description=FailSafe Zo Fallback Watcher
After=network.target failsafe-qore.service

[Service]
Type=simple
WorkingDirectory=/opt/failsafe-qore
Environment=NODE_ENV=production
EnvironmentFile=-/etc/failsafe-qore/env
ExecStart=/usr/bin/node /opt/failsafe-qore/dist/zo/fallback/start-watcher.js
Restart=always
RestartSec=5
User=failsafe
Group=failsafe

[Install]
WantedBy=multi-user.target
